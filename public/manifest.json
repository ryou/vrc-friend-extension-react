{
  "manifest_version": 2,
  "name": "VRC Friend Extension",
  "description": "Tool for VRChat. Show instances exist your friends.",
  "version": "1.0.0",
  "permissions": [
    "tabs",
    "https://vrchat.com/",
    "https://www.vrchat.com/"
  ],
  "browser_action": {
    "default_icon": {
      "19": "icon_small.png",
      "38": "icon_big.png"
    }
  },
  "background": {
    "scripts": [ "icon_clicked.js" ],
    "persistent": false
  }
}
